            <script>
            //window height
                function heightChange(){
                    var wHeight = $(window).height();
                    $('#wrapper').css({'height':wHeight+'px'});
                }
                window.onload = heightChange;
                window.onresize = heightChange;
                
            //slide
                var idx = 0;
                var slidemax = 3;
                var width = 25;

                function sliding(add) {
                    idx = idx + add;
                    if(idx < 0) idx = slidemax;
                    else if(idx > slidemax) idx = 0;
                    $('.slides').stop().animate({'left' : -(idx*width)+"%"}, "slow");
                }

                autoslide = setInterval(function() { sliding(1) }, 4000);

                function after() {
                    setTimeout(function() {
                        clearInterval(autoslide);  
                        autoslide = setInterval(function() { sliding(1) }, 4000);
                    }, 2000);
                }

                $('#leftbtn, #rightbtn').click(function() {
                    clearInterval(autoslide);  
                    if($(this).attr('id') == "leftbtn") sliding(-1);
                    else sliding(1);
                    after();
                });
                
                $('.slides').hover(function() {
                    clearInterval(autoslide);  
                    after();
                });

